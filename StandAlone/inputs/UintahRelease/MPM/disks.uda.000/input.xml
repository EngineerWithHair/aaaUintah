<?xml version="1.0" encoding="UTF-8"?>
<Uintah_specification>
  <Meta>
    <title>Colliding Disks</title>
  </Meta>
  <SimulationComponent type="mpm"/>
  <Time>
    <maxTime>3.0</maxTime>
    <initTime>0.0</initTime>
    <delt_min>0.0001</delt_min>
    <delt_max>0.01</delt_max>
    <timestep_multiplier>0.2</timestep_multiplier>
  </Time>
  <Grid>
    <BoundaryConditions>
      <Face side="x-">
        <BCType id="all" var="Dirichlet" label="Velocity">
          <value> [0.0,0.0,0.0] </value>
        </BCType>
      </Face>
      <Face side="x+">
        <BCType id="all" var="Dirichlet" label="Velocity">
          <value> [0.0,0.0,0.0] </value>
        </BCType>
      </Face>
      <Face side="y-">
        <BCType id="all" var="Dirichlet" label="Velocity">
          <value> [0.0,0.0,0.0] </value>
        </BCType>
      </Face>
      <Face side="y+">
        <BCType id="all" var="Dirichlet" label="Velocity">
          <value> [0.0,0.0,0.0] </value>
        </BCType>
      </Face>
      <Face side="z-">
        <BCType id="all" var="symmetry" label="Symmetric"> </BCType>
      </Face>
      <Face side="z+">
        <BCType id="all" var="symmetry" label="Symmetric"> </BCType>
      </Face>
    </BoundaryConditions>
    <Level>
      <Box label="1">
        <lower>[0,0,0]</lower>
        <upper>[1.0,1.0,.05]</upper>
        <resolution>[20,20,1]</resolution>
        <extraCells>[0,0,0]</extraCells>
        <patches>[1,1,1]</patches>
      </Box>
    </Level>
  </Grid>
  <DataArchiver>
    <filebase>disks.uda</filebase>
    <outputInterval>.025</outputInterval>
    <save label="KineticEnergy"/>
    <save label="TotalMass"/>
    <save label="StrainEnergy"/>
    <save label="CenterOfMassPosition"/>
    <save label="TotalMomentum"/>
    <save label="p.x"/>
    <save label="p.volume"/>
    <save label="p.velocity"/>
    <save label="p.stress"/>
    <save label="g.mass"/>
    <save label="g.stressFS"/>
    <checkpoint cycle="2" interval="0.01"/>
  </DataArchiver>
  <!--The node MPM has been removed.  Its original values are
    in input.xml.orig, and values used for restarts are in checkpoints/t*****/timestep.xml-->
  <PhysicalConstants>
    <gravity>[0,0,0]</gravity>
  </PhysicalConstants>
  <!--The node MaterialProperties has been removed.  Its original values are
    in input.xml.orig, and values used for restarts are in checkpoints/t*****/timestep.xml-->
</Uintah_specification>
